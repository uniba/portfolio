extends ../layout

block content
  h4= project.title || 'Untitled'
  table.table.table-condensed(data-project=JSON.stringify(project))
    tbody
      tr
        th Description
        td(style='white-space: pre;')= project.description || 'No description given.'
      tr
        th Credit
        td(style='white-space: pre;')= project.credit || 'No credit given.'
      tr
        th Tags
        td= project.tags.join(', ')
      tr
        th Created
        td= project.created
      tr
        th Updated
        td= project.updated

  each content in project._contents
    .media
      a.pull-left
        img.media-object.img-polaroid(src=content.toDataURL(), style='width: 100px;')
      .media-body
        strong.media-heading= content.title || 'Untitled'
        if content.url
          p: small: a(href=content.url)= content.url
        else
          p: small No URL given.
  
  .form-actions
    a.btn.btn-small(href='/admin')
      i.icon-chevron-left
      | Back