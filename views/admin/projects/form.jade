
extends ../layout

block content

  form(method='POST',name='form_project',id='form_project' ,action='/admin/projects/', enctype='multipart/form-data')
    input(type='hidden', name='_method', value='#{method}')
    fieldset
      div(class='control-group')
        label(class='control-label') title:
        div(class='controls')
          input(type='text', name='project[title]')

      div(class='control-group')
        label(class='control-label') description:
        div(class='controls')
          textarea(name='project[description]', cols=40, rows=4)

      div(class='control-group')
        label(class='control-label') tags:
        span(class="help-block") enterを押すと複数入力できます。
        div(class='controls')
          input#tags(type='text', name='project[tags]')

      div(class='control-group')
        label(class='control-label') contents:
        i(class="icon-warning-sign")
        span(class="help-block") enterを押すと複数入力できます。    
        div(class='controls')
          input#contents(type='text', name='project[contents]', placeholder='http://')

      div(class='control-group')
        label(class='control-label') images:

      .control-group
        .controls
          #drop
      
      input(type='submit', value='submit', class='btn')
