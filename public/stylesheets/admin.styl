
@import 'nib';
// @import url(vendor/bootstrap.css);

html, body {
  height: 100%;
}

#wrap {
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -60px;
  font-family: 'Helvetica Neue', Helvetica, sans-serif;
  font-family: 200;
}

#push, #footer {
  height: 60px;
}

#footer {
  box-shadow: inset 0 3px 10px rgba(0, 0, 0, .3);
  background-image: url(http://subtlepatterns.com/patterns/classy_fabric.png);
  p {
    text-shadow: 0 1px 0px rgba(0, 0, 0, .5);
  }
}

@media (max-width: 767px) {
  #footer {
    margin-left: -20px;
    margin-right: -20px;
    padding-left: 20px;
    padding-right: 20px;
  }
}

.container {
  width: auto;
  max-width: 680px;
  .navbar {
    margin-top: 2em;
  }
  .credit {
    margin: 20px 0;
  }
}

#drop {
  width: 100%;
  height: 100px;
  border: 1px dotted #ddd;
  transition: color, background-color 100ms ease-out;
  background-color: #eee;
  &.over {
    background-color: #ccc;
  }
  &:after {
    color: #aaa;
    display: block;
    content: 'Drop your images here.';
    text-align: center;
    font-weight: 100;
    font-size: 64px;
    margin-top: 0.6em;
  }
}

.spinner {
  fixed: top 2em right 2em;
  transform: scale(1);
  transition: all 300ms ease-out;
  &.hide-out {
    transform: scale(.8);
    opacity: 0;
  }
}

input {
  border: 1px solid #CCC !important;
}
